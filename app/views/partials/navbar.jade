.header(ng-controller='NavbarCtrl')
  .row
    .cart.pull-right(ng-hide="drawer")
      img(src='images/shopping-cart-icon.png')
      div
        a(snap-toggle="right")
          h3 Your Cart
        p {{cart.qty}} items totaling {{cart.total | currency}}
    h1.pull-left Store
  .row#search-bar
      .col-md-3
        .input-group
          span.input-group-addon
            span.glyphicon.glyphicon-search
          input.form-control(type="text", placeholder="search", ng-keypress='checkSubmit($event)', ng-model='searchTerm')
      .col-md-9
        p.search-note Use the search box to search for products. You can also search on the type of products, like "book", or "movie"
    